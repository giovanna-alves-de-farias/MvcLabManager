@model IEnumerable<MvcLabManager.Models.Computer>

@{
    ViewData["Title"] = "Computadores";
}

<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <table class=table>
        <tr><td><center>Nenhum computador cadastrado.</center></td></tr>
        <tr><td><center><a href="/Computer/Cadastro" class="btn btn-sm btn-outline-success">+</a></center></td></tr>
    </table>
}
else
{
    <table class="table">

        <thead>
            <tr>
                <th>Id</th>
                <th>Ram</th>
                <th>Processor</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach(var computer in Model)
            {
                <tr>
                    <th>@computer.Id</th>
                    <th>@computer.Ram</th>
                    <th>@computer.Processor</th>
                    <th>
                        <a 
                            href="/Computer/Show/@computer.Id"
                            class="btn btn-primarey btn-sm"
                        >
                            Ver
                        </a>
                    </th>
                </tr>
            }
            <tr>
                <td colspan="3"><center><a href="/Computer/Cadastro" class="btn btn-sm btn-outline-success">+</a></center></td>
            </tr>
        </tbody>
        
    </table>
}